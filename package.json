{
  "name": "mml-react",
  "version": "0.2.1",
  "description": "MML (Message Markup Language) for React implementation.",
  "author": "Getstream.io",
  "main": "dist/index.js",
  "module": "dist/mml-react.esm.js",
  "typings": "dist/index.d.ts",
  "license": "SEE LICENSE IN LICENSE",
  "files": [
    "dist",
    "src",
    "license",
    "!src/gatsby-theme-docz",
    "!*.mdx",
    "!*.md"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint src",
    "format": "prettier -w src/**/*.{ts,tsx,scss,mdx}",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "docs": "docz dev",
    "docs-build": "rm -rf docs && docz build",
    "prepare": "yarn build",
    "preversion": "yarn lint && yarn test && yarn build",
    "version": "yarn docs-build && git add -A docs",
    "postversion": "git push && git push --tags && npm publish"
  },
  "engines": {
    "node": ">=10"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^16.8.0",
    "react-dom": "^17.0.0 || ^16.8.0"
  },
  "dependencies": {
    "@braintree/sanitize-url": "^5.0.0",
    "@rgrove/parse-xml": "^2.0.4",
    "@types/linkifyjs": "^2.1.3",
    "@types/rgrove__parse-xml": "^1.1.1",
    "dayjs": "^1.9.6",
    "ical-expander": "^3.0.0",
    "is-mobile": "^2.2.2",
    "linkifyjs": "^2.1.9",
    "pure-react-carousel": "^1.27.6",
    "react-markdown": "^5.0.3",
    "react-virtuoso": "^0.20.3"
  },
  "devDependencies": {
    "@size-limit/preset-big-lib": "^4.9.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-test-renderer": "^17.0.0",
    "cssnano": "^4.1.10",
    "docz": "^2.3.1",
    "gatsby-plugin-styled-components": "^3.5.0",
    "husky": "^4.3.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "rollup-plugin-ignore-import": "^1.3.2",
    "rollup-plugin-scss": "^2.6.1",
    "size-limit": "^4.9.0",
    "styled-components": "^5.2.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "size-limit": [
    {
      "path": "dist/mml-react.cjs.production.min.js",
      "limit": "110 KB",
      "import": "{ createComponent }"
    },
    {
      "path": "dist/styles/index.css",
      "limit": "5 KB",
      "webpack": false
    }
  ]
}
